extends ../layout

block content
  body
    form.pure-form.pure-form-aligned
      fieldset
        .pure-control-group
          label(for='name') Question
          input#name(type='text', placeholder='Question')
        .pure-control-group
          label(for='password') Answer One
          input#password(type='password', placeholder='Answer One')
        .pure-control-group
          label(for='email') Answer Two
          input#email(type='email', placeholder='Answer Two')
        .pure-control-group
          label(for='foo') Answer Three
          input#foo(type='text', placeholder='Answer Three')
        .pure-controls
          button.pure-button.pure-button-primary(type='submit') Submit  

