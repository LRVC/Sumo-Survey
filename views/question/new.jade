extends ../layout

block content
  style(type="text/css").
    * {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    }
    body {
    line-height: 1.7em;
    color: #7f8c8d;
    font-size: 13px;
    background-color: #1f8dd6;
    }
    html {
    box-sizing: border-box;
    }
    .bar {
    display: flex;
    width: 100%;
    height: 100px;
    background: #1f8dd6;
    padding: 20px;
    text-align: center;
    }
    h2 {
    color: white;
    text-align: center;
    }
    h1 {
    color: white;
    text-align: center;
    }
    .right {
    padding-left: 80%;
    }
    .center {
    width:500px;
    margin-left: auto;
    margin-right: auto;
    }
    a {
    text-decoration: none;
    color: white;
    }
    li {
    color: white;
    }
    input {
    display: block;
    }
    form {
    position: relative;
    width: 600px;
    height: 400px;
    color: white;
    }
    label {
    font-size: 25px;
    }
    input {
    width:475px;
    display:block;
    border: 1px solid #999;
    height: 25px;
    -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
    -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
    }


  .bar
      h2 
        a(href="/") Sumo Survey
      h2.right 
        a(href="/dashboard") Dashboard  
  h1 New Question
  form.center(action="/question/create", method="post")
    label Question
    input#name(type='text', placeholder='Question', name='question')
    label(for='password') Answer A
    input#name(type='text', placeholder='Answer A', name='answer_a')
    label(for='email') Answer B
    input#name(type='text', placeholder='Answer B', name='answer_b')
    label(for='password') Answer C
    input#name(type='text', placeholder='Answer C', name='answer_c')
    label(for='password') Answer D
    input#name(type='text', placeholder='Answer D', name='answer_d')
    button(type='submit') Submit



